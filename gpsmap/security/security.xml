<?xml version="1.0" ?>
<odoo>

        <record id="gpsmap_group_admin" model="res.groups">
            <field name="name">Admin</field>
            <field name="implied_ids" eval="[(4, ref('fleet.fleet_group_user'))]"/>
            <field name="category_id" ref="fleet.module_fleet_category"/>
        </record>


        <record id="fleet.fleet_group_manager" model="res.groups">
            <field name="users" eval="[(4, ref('fleet.fleet_group_admin'))]"/>
        </record>









        <record id="module_gpsmap_category" model="ir.module.category">
            <field name="name">SolesGPS</field>
        </record>


        <record id="gpsmap_group_temporal" model="res.groups">
            <field name="name">Temporal</field>
            <field name="category_id" ref="module_gpsmap_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="gpsmap_group_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_gpsmap_category"/>
            <field name="implied_ids" eval="[(4, ref('gpsmap_group_temporal'))]"/>
        </record>
        <record id="gpsmap_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_gpsmap_category"/>
            <field name="implied_ids" eval="[(4, ref('gpsmap_group_user'))]"/>
        </record>
        <record id="gpsmap_group_god" model="res.groups">
            <field name="name">God</field>
            <field name="category_id" ref="module_gpsmap_category"/>
            <field name="implied_ids" eval="[(4, ref('gpsmap_group_manager'))]"/>
        </record>

        
        <!-- MODULE fleet_vehicle -->



        
        <!-- MODULE gpsmap_positions -->

        <record id="access_gpsmap_positions_user" model="ir.rule">
            <field name="name">User can only see his/her manager vehicle</field>
            <field name="model_id" ref="model_gpsmap_positions"/>
            <field name="domain_force"></field>            
            <field name="groups" eval="[(4, ref('fleet.fleet_group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- MODULE gpsmap_geofence -->

        <record id="access_gpsmap_geofence_user" model="ir.rule">
            <field name="name">User can only see his/her geofence</field>
            <field name="model_id" ref="model_gpsmap_geofence"/>
            <field name="domain_force"></field>            
            <field name="groups" eval="[(4, ref('fleet.fleet_group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="access_gpsmap_geofence_manager" model="ir.rule">
            <field name="name">User can only see his/her geofence</field>
            <field name="model_id" ref="model_gpsmap_geofence"/>
            <field name="domain_force"></field>            
            <field name="groups" eval="[(4, ref('fleet.fleet_group_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- MODULE gpsmap_geofence_device -->
        

        <record id="access_gpsmap_geofence_device_user" model="ir.rule">
            <field name="name">User can only see his/her geofence_device</field>
            <field name="model_id" ref="model_gpsmap_geofence_device"/>
            <field name="domain_force"></field>            
            <field name="groups" eval="[(4, ref('fleet.fleet_group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        <record id="access_gpsmap_geofence_device_manager" model="ir.rule">
            <field name="name">User can only see his/her geofence_device</field>
            <field name="model_id" ref="model_gpsmap_geofence_device"/>
            <field name="domain_force"></field>            
            <field name="groups" eval="[(4, ref('fleet.fleet_group_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>






        <!-- MODULE VARIOS -->

        <record id="gpsmap_mail_chanel" model="mail.channel">
            <field name="name">SolesGPS</field>
            <field name="group_public_id" ref="gpsmap_group_manager"/>
            <field name="email_send" eval="True"/>
            <field name="public">groups</field>
        </record>

    
</odoo>
